# Auto detect text files and perform LF normalization
* text=auto

# Explicitly mark common binary types to avoid any normalization
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary

# Enforce LF where scripts break on CRLF
*.sh   text eol=lf
*.bash text eol=lf
*.py   text eol=lf
*.rb   text eol=lf

# Enforce CRLF for Windows-native artifacts (if needed)
*.bat  text eol=crlf
*.cmd  text eol=crlf

# Keep Git attributes file itself normalized
.gitattributes text eol=lf
